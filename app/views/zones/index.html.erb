<div class="row">
  <div class="container">
    <div class="col-md-12 col-xs-12">
      <ol class="breadcrumb">
        <li><a href= <%= root_path %>>Home</a></li>
        <li class="active">Zones</li>
      </ol>
    </div>
  </div>
</div>
<div class="row">
  <div class="container">
    <div class="col-md-12 col-xs-12">
      <div class="page-header">
        <h1>List of Country Zones <small>something about the country</small></h1>
      </div>
        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Country Name</th>
              <th>Country Shortcode</th>
            </tr>
          </thead>
          <tbody>
            <% count = 1 %>
            <% @country.each do |key, value| %>
              <% if count%2 == 0 %>
                <tr class="info">
              <% else %>
                <tr class="">
              <% end %>
                <td><%= count %></td>
                <td><%= key %></td>
                <td><%= value %></td>
              </tr>
              <% count += 1 %>
            <% end %>



          </tbody>
        </table>

      <div>

      </div>
    </div>
  </div>
</div>


